/* pages/message/message.wxss */
page{
  background: #f1f1f1;
}
.card{
  background: #fff;
  border: 1rpx solid #ddd;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  padding: 30rpx;
  margin: 60rpx 20rpx;
}
.card-title{
  font-size: 20px;
  margin-bottom: 20rpx;
}
.card-date{
  color: #ccc;
  font-size: 14px;
  padding-bottom: 20rpx;
  margin-bottom: 20rpx;
  border-bottom: 1rpx solid #ddd;
}
.card-img{
  width: 100%;
  height: 300rpx;
}
.card-desc{
  font-size: 16px;
  color: #333;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #ddd;
  margin: 20rpx 0;
}
.card-rad{
  font-size: 14px;
  color: #666;
}